\begin_deeper
\begin_layout Enumerate
\begin_inset Formula 
\begin{align*}
\left[Q_{1},Q_{2}\right] & =\frac{1}{2}\left[x+\frac{1}{\alpha}p_{y},x-\frac{1}{\alpha}p_{y}\right]\\
 & =\frac{1}{2}\left\{ \left[x,x-\frac{1}{\alpha}p_{y}\right]+\frac{1}{\alpha}\left[p_{y},x-\frac{1}{\alpha}p_{y}\right]\right\} \\
 & =\frac{1}{2}\left\{ \left[x,x\right]-\frac{1}{\alpha}\left[x,p_{y}\right]+\frac{1}{\alpha}\left[p_{y},x\right]-\frac{1}{\alpha^{2}}\left[p_{y},p_{y}\right]\right\} \\
 & =\boxed{0}
\end{align*}

\end_inset


\begin_inset Formula 
\begin{align*}
\left[P_{1},P_{2}\right] & =\frac{1}{2}\left[p_{x}-\alpha y,p_{x}+\alpha y\right]\\
 & =\frac{1}{2}\left\{ \left[p_{x},p_{x}+\alpha y\right]-\alpha\left[y,p_{x}+\alpha y\right]\right\} \\
 & =\frac{1}{2}\left\{ \left[p_{x},p_{x}\right]+\alpha\left[p_{x},y\right]-\alpha\left[y,p_{x}\right]-\alpha^{2}\left[y,y\right]\right\} \\
 & =\boxed{0}
\end{align*}

\end_inset


\begin_inset Formula 
\begin{align*}
\left[Q_{1},P_{2}\right] & =\frac{1}{2}\left[x+\frac{1}{\alpha}p_{y},p_{x}+\alpha y\right]\\
 & =\frac{1}{2}\left\{ \left[x,p_{x}+\alpha y\right]+\frac{1}{\alpha}\left[p_{y},p_{x}+\alpha y\right]\right\} \\
 & =\frac{1}{2}\left\{ {\color{gray}\underset{i\hslash}{\underbrace{{\normalcolor \left[x,p_{x}\right]}}}}+\alpha\left[x,y\right]+\frac{1}{\alpha}\left[p_{y},p_{x}\right]+{\color{gray}\underset{-i\hslash}{\underbrace{{\normalcolor \left[p_{y},y\right]}}}}\right\} \\
 & =\boxed{0}
\end{align*}

\end_inset


\begin_inset Formula 
\begin{align*}
\left[Q_{2},P_{1}\right] & =\frac{1}{2}\left[x-\frac{1}{\alpha}p_{y},p_{x}-\alpha y\right]\\
 & =\frac{1}{2}\left\{ \left[x,p_{x}-\alpha y\right]-\frac{1}{\alpha}\left[p_{y},p_{x}-\alpha y\right]\right\} \\
 & =\frac{1}{2}\left\{ \left[x,p_{x}\right]-\alpha\left[x,y\right]-\frac{1}{\alpha}\left[p_{y},p_{x}\right]-\left[p_{y},y\right]\right\} \\
 & =\boxed{0}
\end{align*}

\end_inset


\begin_inset Formula 
\begin{align*}
\left[Q_{1},P_{1}\right] & =\frac{1}{2}\left[x+\frac{1}{\alpha}p_{y},p_{x}-\alpha y\right]\\
 & =\frac{1}{2}\left\{ \left[x,p_{x}+\alpha y\right]+\frac{1}{\alpha}\left[p_{y},p_{x}-\alpha y\right]\right\} \\
 & =\frac{1}{2}\left\{ {\color{gray}\underset{i\hslash}{\underbrace{{\normalcolor \left[x,p_{x}\right]}}}}+\alpha\left[x,y\right]+\frac{1}{\alpha}\left[p_{y},p_{x}\right]-{\color{gray}\underset{-i\hslash}{\underbrace{{\normalcolor \left[p_{y},y\right]}}}}\right\} \\
 & =\boxed{i\hslash}
\end{align*}

\end_inset


\begin_inset Formula 
