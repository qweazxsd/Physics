\begin_layout Enumerate
\begin_inset Formula 
\begin{align*}
H & =\frac{1}{2m}\left(\mathbf{p}-\frac{q}{c}\mathbf{A}\right)^{2}=\frac{1}{2m}\left(\mathbf{p}-\frac{q}{c}\begin{pmatrix}-\frac{By}{2}\\
\frac{Bx}{2}\\
0
\end{pmatrix}\right)^{2}\\
 & =\frac{\left(p_{x}+\frac{qB}{2c}y\right)^{2}}{2m}+\frac{\left(p_{y}-\frac{qB}{2c}x\right)^{2}}{2m}+\frac{p_{z}^{2}}{2m}
\end{align*}

\end_inset


