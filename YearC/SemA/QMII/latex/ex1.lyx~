\begin_inset Formula 
\begin{align*}
b^{\dagger} & b=\frac{1}{2}\left(Q_{2}-iP_{2}\right)\left(Q_{2}+iP_{2}\right)\\
 & =\frac{1}{2}\left(Q_{2}^{2}+iQ_{2}P_{2}-iP_{2}Q_{2}+P_{2}^{2}\right)\\
 & =\frac{1}{2}\left(Q_{2}^{2}+i\left[Q_{2},P_{2}\right]+P_{2}^{2}\right)\\
 & =H-\frac{1}{2}\\
 & \Downarrow\\
H & =b^{\dagger}b+\frac{1}{2}
\end{align*}

\end_inset


